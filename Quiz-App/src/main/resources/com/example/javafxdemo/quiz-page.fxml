<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxdemo.controller.QuizPageController"
>
    <stylesheets>
        <URL value="@./css/quizpage.css" />
    </stylesheets>
    <Label fx:id="questionNumberLabel" styleClass="question-number" />
    <VBox styleClass="quiz-content">
        <Label fx:id="questionLabel" styleClass="question-label" />
        <Button fx:id="answerButton1" styleClass="answer-button" onAction="#checkAnswer" />
        <Button fx:id="answerButton2" styleClass="answer-button" onAction="#checkAnswer" />
        <Button fx:id="answerButton3" styleClass="answer-button" onAction="#checkAnswer" />
        <Button fx:id="answerButton4" styleClass="answer-button" onAction="#checkAnswer" />
        <Label fx:id="resultLabel" text="" />
    </VBox>
    <Label fx:id="correctAnswersLabel" styleClass="correct-answers-label" />
    <Label fx:id="incorrectAnswersLabel" styleClass="incorrect-answers-label" />
</VBox>
