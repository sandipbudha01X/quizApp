<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="600.0" prefHeight="400.0" prefWidth="400.0" spacing="10.0" style="-fx-background-color: #e1f7f5;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdemo.controller.LoginController">
    <children>
      <Label text="LOGIN FORM">
         <font>
            <Font name="SansSerif Bold" size="24.0" />
         </font>
      </Label>
        <Label fx:id="resultLabel" styleClass="lbl" text="" />
        <HBox alignment="CENTER" spacing="10">
            <Label text="UserName" />
            <TextField fx:id="userEmail" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Password" />
            <PasswordField fx:id="userPassword" />
        </HBox>
        <Label prefHeight="6.0" prefWidth="0.0" styleClass="my_label" />
        <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#login" style="-fx-background-color: #bbf2ed; -fx-background-radius: 5PX; -fx-border-radius: 5px;" styleClass="btn-primary" text="Log In">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Label text="Label">
         <VBox.margin>
            <Insets left="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="switchToRegisterButton" mnemonicParsing="false" onAction="#switchToRegister" text="Switch to register" />
    </children>
</VBox>
